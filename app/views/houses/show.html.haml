- @title = House.model_name.human
- @with_map = true

-#.col-xs-12.col-sm-3.col-sm-push-9
  = tipp_panel do
    = t('.tip_panel_text')

-#.col-xs-12.col-sm-9.col-sm-pull-3
.col-xs-12
  %h3= @title
  .row
    .col-xs-3.text-right
      %strong
        = House.human_attribute_name("street")
        \:
    .col-xs-9
      = @house.street
      = @house.number
  .row
    .col-xs-3.text-right
      %strong
        = House.human_attribute_name("postcode")
        \:
    .col-xs-9
      = @house.postcode
  .row
    .col-xs-3.text-right
      %strong
        = House.human_attribute_name("city")
        \:
    .col-xs-9
      = @house.city
  .row
    .col-xs-3.text-right
      %strong
        = House.human_attribute_name("country")
        \:
    .col-xs-9
      = @house.country
      
  %h4= User.model_name.human(count: 2)
  - @house.locations.each do |location|
    - location_div_id = "location_" + location.id.to_s + "_div"
    .location{"data-location-id" => "#{location.id}", :id => location_div_id}
      .location_view
        = render 'locations/location_view', location: location

  .text-right
    = t('.text_address_missmatch')
    - mail_to 'mail@shareship.de', 'mail@shareship.de!', subject: t('.mail_subject_address_missmatch', house: @house.id )
    = t('.get_in_contact')
    = link_to t('titles.contacts.new'), contacts_path(subject: t('.mail_subject_address_missmatch', house: @house.id ))
    = t('.with_us')

:javascript
  $(document).on('turbolinks:load', function() {
    var onMapClick = function(e) {
      console.log("You clicked the map at " + e.latlng.lat + ", " + e.latlng.lng);
    };

