<h2>Log in</h2>

<%= bootstrap_form_for(resource, as: resource_name, url: session_path(resource_name), layout: :horizontal) do |f| %>
  <%= f.email_field :email, autofocus: true %>

  <%= f.password_field :password, autocomplete: "off" %>

  <% if devise_mapping.rememberable? -%>
    <%= f.form_group do %>
      <%= f.check_box :remember_me %>
    <% end %>
  <% end -%>

  <%= f.form_group do %>
    <%= f.submit "Log in" %>
  <% end -%>
<% end %>

<%= render "devise/shared/links" %>
