<h2>Change your password</h2>

<%= bootstrap_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }, layout: :horizontal) do |f| %>
  <%= devise_error_messages! %>
  <%= f.hidden_field :reset_password_token %>

  <%= f.password_field :password, autofocus: true, autocomplete: "off", help: "#{@minimum_password_length} characters minimum" if @minimum_password_length %>

  <%= f.password_field :password_confirmation, autocomplete: "off" %>

  <%= f.form_group do %>
    <%= f.submit "Change my password" %>
  <% end %>
<% end %>

<%= render "devise/shared/links" %>
