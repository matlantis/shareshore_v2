<h2>Edit <%= resource_name.to_s.humanize %></h2>

<div class="row">
  <div class="col-xs-12">
    <%= link_to t("View public profile"), user_path(@user), class: "btn btn-default" %>
    <%= link_to t('My Articles'), articles_user_path(@user), class: "btn btn-default" %>
    <%= link_to t('New Article'), new_article_path, class: "btn btn-default" %>
  </div>
</div>

<br>

<div class="row">
  <div class="col-xs-12">
    <ul class="nav nav-tabs">
      <li class="active"><a data-toggle="tab" href="#basic"><%= t("Basic Info") %></a></li>
      <li><a data-toggle="tab" href="#locations"><%= t("Locations") %></a></li>
    </ul>
  </div>
</div>

<div class="tab-content">
  <div id="basic" class="tab-pane fade in active">
    <h3><%= t("Basic Info") %></h3>
    <%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }, layout: :horizontal) do |f| %>
      <%= devise_error_messages! %>

      <%= f.email_field :email, autofocus: true %>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div><%= t("Currently waiting confirmation for") %>: <%= resource.unconfirmed_email %></div>
      <% end %>

      <%= f.password_field :password, help: t("leave blank if you dont want to change it"), autocomplete: "off" %>

      <%= f.password_field :password_confirmation, autocomplete: "off" %>

      <%= f.text_field :nickname %>

      <%= f.text_field :firstname %>

      <%= f.text_field :lastname %>

      <%= f.text_field :phoneno, label: t("Phone number") %>

      <%= f.form_group do %>
        <%= f.check_box :showemail, label: t("Show email address in contact details to the public") %>
        <%= f.check_box :showphone, label: t("Show phone number in contact details to the public") %>
      <% end %>

      <%= f.password_field :current_password, help: t("we need your current password to confirm your changes"), autocomplete: "off" %>

      <%= f.form_group do %>
        <%= f.submit t("Update") %>
      <% end %>
    <% end %>

    <h3><%= t("Cancel my account") %></h3>

    <p><%= t("Unhappy") %>? <%= button_to t("Cancel my account"), registration_path(resource_name), data: { confirm: t("Are you sure?") }, method: :delete, class: "btn btn-default" %></p>

  </div>
  <div id="locations" class="tab-pane fade">
    <h3><%= t("Locations") %></h3>

    <table class="table table-striped">
      <% @user.locations.each do |location| %>
        <tr>
          <td><%= location.street_and_no %></td>
          <td><%= location.postcode %></td>
          <td><%= location.city %></td>
          <td><%= location.country %></td>
          <td><%= link_to t("Edit"), edit_location_path(location) %></td>
          <td><%= link_to t("Delete"), location_path(location), method: :delete, data: { confirm: t("really_delete_location_question", count: location.articles.count) } %></td>
          <td><%= link_to t("Articles at this location"), articles_location_path(location) %></td>
        </tr>
      <% end %>
      <%= form_for :location, url: locations_path do |f| %>
        <tr>
          <td><%= f.text_field :street_and_no, placeholder: Location.human_attribute_name("street_and_no") %></td>
          <td><%= f.text_field :postcode, placeholder: Location.human_attribute_name("postcode") %></td>
          <td><%= f.text_field :city, placeholder: Location.human_attribute_name("city") %></td>
          <td><%= f.text_field :country, placeholder: Location.human_attribute_name("country") %></td>
          <td><%= f.submit t("Add") %></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>
