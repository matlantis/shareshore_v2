<% @title = @user.nickname %>
<h2><%= @user.nickname %></h2>

<div class="row">
  <div class="col-xs-12">
    <div class="row">
      <div class="col-xs-2 text-right">
        <strong><%= t"Name" %>:</strong>
      </div>
      <div class="col-xs-10">
        <%= @user.fullname %>
      </div>
    </div>

    <% if @user.showemail? %>
      <% if current_user %>
        <% subject = t("mail.user_request_username", user: current_user.nickname) %>
      <% else %>
        <% subject = t("mail.user_request_anonymous") %>
      <% end %>
      <div class="row">
        <div class="col-xs-2 text-right">
          <strong><%= t("email") %>:</strong>
        </div>
        <div class="col-xs-10">
          <%= mail_to @user.email, @user.email, subject: subject %>
        </div>
      </div>
    <% end %>
    <% if @user.showphone %>
      <div class="row">
        <div class="col-xs-2 text-right">
          <strong><%= t("phone") %>:</strong>
        </div>
        <div class="col-xs-10">
          <%= @user.phoneno %>
        </div>
      </div>
    <% end %>

    <div class="row">
      <div class="col-xs-2 text-right">
        <strong><%= t('Locations') %>:</strong>
      </div>
      <div class="col-xs-10">
        <% @user.locations.each do |location| %>
          <% if location.articles.count > 0 %>
            <span class="glyphicon glyphicon-map-marker"></span> <strong><%= location.shortaddress %></strong>, <%= link_to location.articles.count.to_s + " " + t('Articles'), articles_location_path(location) %><br>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
