<h2>Sign up</h2>

<%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name), layout: :horizontal) do |f| %>
  <%= devise_error_messages! %>

  <%= f.email_field :email, autofocus: true %>
 
  <%= f.password_field :password, autocomplete: "off", help: t("password_minimum_characters", chars: @minimum_password_length) if @minimum_password_length %>

    <%= f.password_field :password_confirmation, autocomplete: "off" %>

    <%= f.text_field :nickname %>

    <%= f.form_group do %>
      <%= f.submit t("Signup") %>
    <% end %>
<% end %>

<%= render "devise/shared/links" %>
