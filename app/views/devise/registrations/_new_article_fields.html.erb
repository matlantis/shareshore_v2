<% article_div_id = "own_article_" + String(f.index) + "_div" %>
<div class="row">
  <%= f.check_box :to_be_created, value: false, label: "", hidden: true %>

  <% article_title_field_id = "own_article_" + String(f.index) + "_title_field" %>
  <%= f.text_field :title, placeholder: Article.human_attribute_name("title"), id: article_title_field_id %>

  <script>
   document.getElementById('<%= article_title_field_id %>').onkeyup = function(){ onTitleFieldKeyUp('<%= article_title_field_id %>', '<%= article_div_id %>'); };
  </script>

  <div id="<%= article_div_id %>" class="secondary_article_inputs">

    <%= f.text_field :details, placeholder: Article.human_attribute_name("details") %>
    
    <%= f.number_field :quality, min: 0, max: 5, size: 8 %>

    <%= f.number_field :rate_eur, min: 0, step: 0.01, append: "â‚¬", size: 10 %>

    <%= f.text_field :rate_interval, size: 10 %>

    <%= f.collection_select :location_id, current_user.locations, :id, :shortaddress %>

    <% link_to_remove_association "remove", f %>

    <%= f.hidden_field :id %>
    <%= f.hidden_field :template_id %>
  </div>
</div>
