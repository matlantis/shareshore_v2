<% article_div_id = "own_article_" + String(f.index) + "_div" %>
<div class="row nested-fields">
  <%= f.check_box :to_be_created, value: true, label: "", hidden: true %>

  <%= f.text_field :title, placeholder: Article.human_attribute_name("title"), id: "own_article_0_title_field", data: f.index.to_s %>

  <div id="<%= article_div_id %>">

    <%= f.text_field :details, placeholder: Article.human_attribute_name("details") %>
    
    <%= f.number_field :quality, min: 0, max: 5, size: 8 %>

    <%= f.number_field :rate_eur, min: 0, step: 0.01, append: "â‚¬", size: 10 %>

    <%= f.text_field :rate_interval, size: 10 %>

    <%= f.collection_select :location_id, current_user.locations, :id, :shortaddress %>

    <%= f.form_group do %>
      <%= link_to_remove_association "remove", f, class: "btn btn-default" %>
    <% end %>
    
    <%= f.hidden_field :id %>
    <%= f.hidden_field :template_id %>
  </div>
</div>
