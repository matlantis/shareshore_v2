<h2>Resend unlock instructions</h2>

<%= bootstrap_form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }, layout: :horizontal) do |f| %>
  <%= devise_error_messages! %>

  <%= f.email_field :email, autofocus: true %>

  <% f.form_group do %>
    <%= f.submit t(".Resend unlock instructions") %>
  <% end %>
<% end %>

<%= render "devise/shared/links" %>
