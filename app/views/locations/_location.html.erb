<% location_div_id = "location_" + location.id.to_s + "_div" %>
<div class="location" id="<%= location_div_id %>">
  <div class="row location_view">
    <div class="col-xs-4">
      <%= location.street_and_no %>
    </div>
    <div class="col-xs-2">
      <%= location.postcode %>
    </div>
    <div class="col-xs-3">
      <%= location.city %>
    </div>
    <div class="col-xs-1">
      <%= location.country %>
    </div>
    <div class="col-xs-2 text-right">
      <%= link_to("", "", class: "glyphicon glyphicon-pencil location_edit_button", data: { location_id: location.id } ) %>
      <%= link_to("", location, method: :delete, data: { confirm: t("Are you sure?") }, class: "glyphicon glyphicon-remove", remote: true) %>
    </div>

  </div>

  <div class="row location_edit">
    <%= bootstrap_form_for(location, layout: :horizontal, remote: true) do |f| %>
      <%= f.text_field :street_and_no %>
      <%= f.text_field :postcode %>
      <%= f.text_field :city %>
      <%= f.text_field :country %>
      <%= f.form_group do %>
        <%= f.submit %>
      <% end %>
    <% end %>
  </div>
</div>
