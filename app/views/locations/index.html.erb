<h1>Listing Locations</h1>

<table>
  <thead>
    <tr>
      <th>Street and no</th>
      <th>Postcode</th>
      <th>City</th>
      <th>Country</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @locations.each do |location| %>
      <tr>
        <td><%= location.street_and_no %></td>
        <td><%= location.postcode %></td>
        <td><%= location.city %></td>
        <td><%= location.country %></td>
        <td><%= location.user.email %></td>
        <td><%= link_to('Edit', edit_location_path(location)) if current_user.id == location.user.id %></td>
        <td><%= link_to('Destroy', location, method: :delete, data: { confirm: 'Are you sure?' } ) if current_user and current_user.id == location.user.id%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

