<%= bootstrap_form_for(@location, layout: :horizontal) do |f| %>
  <%= f.alert_message t("Please fix the errors below") %>

  <%= f.text_field :street_and_no, label: t("Street and no") %>
  <%= f.text_field :postcode, label: t("Postcode") %>
  <%= f.text_field :city, label: t("City") %>
  <%= f.text_field :country, label: t("Country") %>
  <%= f.submit %>

<% end %>
