%p#notice= notice
%h1 Listing User Article Requests
%table
  %thead
    %tr
      %th Text
      %th User
      %th Article
      %th{:colspan => "3"}
  %tbody
    - @user_article_requests.each do |user_article_request|
      %tr
        %td= user_article_request.text
        %td= user_marker user_article_request.user
        %td= article_marker_modal user_article_request.article
        %td= link_to 'Show', user_article_request
        %td= link_to 'Edit', edit_user_article_request_path(user_article_request)
        %td= link_to 'Destroy', user_article_request, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New User article request', new_user_article_request_path
