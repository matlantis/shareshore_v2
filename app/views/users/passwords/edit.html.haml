%h2= t('.header_change_password')
= bootstrap_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }, layout: :horizontal) do |f|
  = devise_error_messages!
  = f.hidden_field :reset_password_token
  = f.password_field :password, autofocus: true, autocomplete: "off", help: t('.help_minimum_password_length', length: @minimum_password_length) if @minimum_password_length
  = f.password_field :password_confirmation, autocomplete: "off"
  = f.form_group do
    = f.submit t(".submit")
= render "devise/shared/links"
