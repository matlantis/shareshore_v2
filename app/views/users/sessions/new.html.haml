- @title = t('titles.users.sessions.new')

= bootstrap_form_for(resource, as: resource_name, url: session_path(resource_name), layout: :horizontal) do |f|
  = f.email_field :email, autofocus: true
  = f.password_field :password, autocomplete: "off"
  - if devise_mapping.rememberable?
    = f.form_group do
      = f.check_box :remember_me
  = f.form_group do
    = f.submit t('.submit')
    
= render "devise/shared/links"
