- @title = @user.nickname
.col-xs-12.col-sm-3.col-sm-push-9
  = tipp_panel title: "Hilfe" do
    Ein noch kleinerer Hilfe text.
.col-xs-12.col-sm-9.col-sm-pull-3
  %h2= @user.nickname
  .row
    .col-xs-2.text-right
      %strong
        = t"Name"
        \:
    .col-xs-10
      = @user.fullname
  - if @user.showemail?
    - if current_user
      - subject = t("mail.user_request_username", user: current_user.nickname)
    - else
      - subject = t("mail.user_request_anonymous")
    .row
      .col-xs-2.text-right
        %strong
          = t("email")
          \:
      .col-xs-10
        = mail_to @user.email, @user.email, subject: subject
  - if @user.showphone
    .row
      .col-xs-2.text-right
        %strong
          = t("phone")
          \:
      .col-xs-10
        = @user.phoneno
  .row
    .col-xs-2.text-right
      %strong
        = t('Locations')
        \:
    .col-xs-10
      - if @user.locations.empty?
        = t('None_m')
      - @user.locations.each do |location|
        = location_marker location
        , #{link_to location.articles.count.to_s + " " + t('Articles'), articles_location_path(location)}
        %br/
