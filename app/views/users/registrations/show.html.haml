- @title = t('titles.users.registrations.show')

.col-xs-12.col-sm-3.col-sm-push-9
  = tipp_panel do
    = render 'show_help'

.col-xs-12.col-sm-9.col-sm-pull-3
  %h3= @title
  .row
    .col-xs-2.text-right
      %strong
        = User.human_attribute_name("nickname")
        \:
    .col-xs-10
      = @user.nickname
  - if @user.showemail?
    - if current_user
      - subject = t("mail.user_request_username", user: current_user.nickname)
    - else
      - subject = t("mail.user_request_anonymous")
    .row
      .col-xs-2.text-right
        %strong
          = User.human_attribute_name("email")
          \:
      .col-xs-10
        = mail_to @user.email, @user.email, subject: subject
  - if @user.showphone
    .row
      .col-xs-2.text-right
        %strong
          = User.human_attribute_name("phoneno")
          \:
      .col-xs-10
        = @user.phoneno
  .row
    .col-xs-2.text-right
      %strong
        = User.human_attribute_name('locations')
        \:
    .col-xs-10
      - if @user.locations.empty?
        = t('.empty_locations_list_message')
      - @user.locations.each do |location|
        = location_marker location
        , #{link_to articles_count(location.articles), articles_location_path(location)}
        %br/
  - if is_admin?
    .row
      .col-xs-12
        = link_to "Articles", user_articles_path(user_id: @user.id), class: 'btn btn-danger btn-xs'
        = link_to "Locations", user_locations_path(user_id: @user.id), class: 'btn btn-danger btn-xs'
