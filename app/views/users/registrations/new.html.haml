- @title = t('titles.users.registrations.new')

%h3= @title

= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name), layout: :horizontal) do |f|
  = devise_error_messages!
  = f.email_field :email, autofocus: true
  = f.password_field :password, autocomplete: "off", help: t('.help_password_minimum_length', length: @minimum_password_length) if @minimum_password_length
  = f.password_field :password_confirmation, autocomplete: "off"
  = f.text_field :nickname
  = f.form_group do
    = f.check_box :terms do
      = t('.i_do')
      = link_to t('.terms_of_use'), '/pages/terms-of-use'
      = t('.and_the')
      = link_to t('.declaration_of_privacy'), '/pages/privacy'
      = succeed '.' do
        = t('.agree')
      
  = f.form_group do
    = f.submit t('forms.finish')
    
= render "users/shared/links"
