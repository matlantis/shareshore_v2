- @title = t('titles.users.registrations.edit')

.col-xs-12.col-sm-3.col-sm-push-9
  = tipp_panel do
    = render 'edit_help'
    
.col-xs-12.col-sm-9.col-sm-pull-3
  %h3= @title
  = bootstrap_form_for(resource, url: registration_path(resource_name), as: resource_name, html: { method: :put }, layout: :horizontal) do |f|
    = devise_error_messages!
    = f.email_field :email, autofocus: true
    - if devise_mapping.confirmable? && resource.pending_reconfirmation?
      %div
        = t(".text_awaiting_confirmation")
        \: #{resource.unconfirmed_email}
    = f.password_field :password, help: t(".help_password_leave_blank"), autocomplete: "off", label: t('.new_password_label')
    = f.password_field :password_confirmation, autocomplete: "off", label: t('.new_password_confirmation_label')
    = f.text_field :nickname
    = f.text_field :firstname
    = f.text_field :lastname
    = f.text_field :phoneno
    = f.form_group do
      = f.check_box :showemail
      = f.check_box :showphone
    = f.password_field :current_password, help: t(".help_password_needed"), autocomplete: "off"
    = f.form_group do
      = f.submit t("forms.finish")
      = link_to t(".link_public_profile"), user_path(@user), class: "btn btn-default"
  = button_to t(".link_cancel_account"), registration_path(resource_name), data: { confirm: t(".delete_confirmation_question") }, method: :delete, class: "btn btn-default"
