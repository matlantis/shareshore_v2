- if controller_name != 'sessions'
  = link_to t('titles.users.sessions.new'), new_session_path(resource_name), class: "btn btn-default"
  %br/
- if devise_mapping.registerable? && controller_name != 'registrations'
  = link_to t('titles.users.registrations.new'), new_registration_path(resource_name), class: "btn btn-default"
  %br/
- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations'
  = link_to t('titles.users.passwords.new'), new_password_path(resource_name), class: "btn btn-default"
  %br/
- if devise_mapping.confirmable? && controller_name != 'confirmations'
  = link_to t('titles.users.confirmations.new'), new_confirmation_path(resource_name), class: "btn btn-default"
  %br/
- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks'
  = link_to t('titles.users.unlocks.new'), new_unlock_path(resource_name), class: "btn btn-default"
  %br/
- if devise_mapping.omniauthable?
  - resource_class.omniauth_providers.each do |provider|
    = link_to t('.link_signin_omniauth', provider: OmniAuth::Utils.camelize(provider)), omniauth_authorize_path(resource_name, provider), class: "btn btn-default"
    %br/
