<%= bootstrap_form_for(@article, layout: :horizontal) do |f| %>
  <%= f.alert_message t("Please fix the errors below") %>
  
  <%= f.text_field :title %>
  <%= f.text_area :details %>
  <%= f.number_field :value_eur, value: 10, append: "€" %>
  <%= f.text_field :rate %>
  
  <%= f.form_group do %>
    <%= f.check_box :gratis %>
  <% end %>
    
  <%= f.number_field :deposit_eur, value: 0, append: "€" %>
  <%= f.collection_select :location_id, current_user.locations, :id, :shortaddress %>
  <%= f.file_field :picture %>
  <%= f.form_group do %>
    <%= f.submit %>
  <% end %>
<% end %>
