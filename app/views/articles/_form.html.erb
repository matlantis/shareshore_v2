<%= bootstrap_form_for(@article, layout: :horizontal) do |f| %>
  <%= f.alert_message "Please fix the errors below." %>
  
  <%= f.text_field :title %>
  <%= f.text_area :details %>
  <%= f.number_field :price_eur, label: "Price in EUR", append: "€" %>
  <%= f.text_field :rate %>
  
  <%= f.form_group :gratis do %>
  <%= f.check_box :gratis %>
  <% end %>
    
  <%= f.number_field :deposit_eur, label: "Deposit", append: "€" %>
  <%= f.collection_select :location_id, current_user.locations, :id, :shortaddress %>
  <%= f.file_field :picture %>
  <%= f.submit %>
<% end %>
