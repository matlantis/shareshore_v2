<% articles ||= Article.all %>

// prepare the marker data
var marker_defs, bounds;

// build up bounds vector
bounds = <%= "#{@bounds.to_s} "%>

// add house markers
// toggle marker_defs to draw results via js after page load
marker_defs = [ <%= create_map_house_markers(articles, @houses, @house_center) %>];

// add current location marker
marker_defs_center = [ <%= create_map_current_location_marker(@current_location) %> ];
// draw the map
drawmap_leaflet("mapid", marker_defs, marker_defs_center, bounds);
