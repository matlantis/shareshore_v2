<div class="row">
  <% article_show_id = "article_" + article.id.to_s + "_show" %>

  <div class="col-sm-3">
    <a href="#<%= article_show_id%>" data-toggle="modal">
      <%= article.title %>
    </a>
    <br>
    <% if article.picture.present? %>
      <a href="#<%= article_show_id%>" data-toggle="modal">
        <%= image_tag(article.picture_url(:thumb)) %>
      </a>
    <% end %>
  </div>

  <div id="<%= article_show_id %>" class="modal fade">
    <%= render 'show_modal', article: article %>
  </div>
  
  <div class="col-sm-5">
    <%= rate_marker(article) %>
    <br>
    <%= location_marker article.location %>
  </div>

  <div class="col-sm-4 text-right">
    <% if edit && current_user && current_user.id == article.user.id %>
      <%= link_to("", "", class: "glyphicon glyphicon-pencil article_cb edit-remove ", data: { article_id: article.id } ) %>
      <%= link_to("", article, method: :delete, data: { confirm: t("Are you sure?") }, class: "glyphicon glyphicon-remove edit-remove", remote: true) %>
    <% else %>
      <%= user_marker article.user %>
    <% end %>
    <br>

    <% if @current_location %>
      <strong><%= t('distance') %>:</strong> <%= "%.1f km" % article.location.distance_from( @current_location ) %>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="col-xs-12">
    <%= truncate(article.details, length: 60) %>
  </div>
</div>
