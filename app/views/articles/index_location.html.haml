- @title = t("titles.articles.index_location", user: @location.user.nickname)

-#.col-xs-12.col-sm-3.col-sm-push-9
  = tipp_panel do
    = t(".tip_panel_text")

-#.col-xs-12.col-sm-9.col-sm-pull-3
.col-xs-12
  = content_tag :h3, @title
  = user_marker(@location.user)
  %br/
  = location_marker(@location)
  %br/
  %br/
  - if @articles.empty?
    .empty-list
      = t('.empty_list_message')
  - @articles.each do |article|
    = render 'article_view', article: article, edit: false, home: false
  - will_paginate @articles, renderer: BootstrapPagination::Rails
