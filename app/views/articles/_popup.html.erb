<%= house_marker(house) %><br><br>
<% house.locations.each do |location| %>
  <%= user_marker(location.user) %>: <%= link_to articles.where("location_id = ?", location.id).count.to_s + " " + t('Articles'), articles_location_path(location) %><br>
  <% if (not articles.empty?) && articles.count < 4 # show only when at least one and at most 3 articles are present %> 
    <% articles.where("location_id = ?", location.id).each do |article| %>
      <%= article_marker_modal article %>
    <% end %>
  <% end %>
  <br><br>
<% end %>
