<% if Rails.env.development? %>
  <link rel="apple-touch-icon" sizes="180x180" href="<%= asset_path 'favicon-dev/apple-touch-icon.png' %>">
  <link rel="icon" type="image/png" href="<%= asset_path 'favicon-dev/favicon-32x32.png' %>" sizes="32x32">
  <link rel="icon" type="image/png" href="<%= asset_path 'favicon-dev/favicon-16x16.png' %>" sizes="16x16">
  <link rel="manifest" href="<%= asset_path 'favicon-dev/manifest.json' %>">
  <link rel="mask-icon" href="<%= asset_path 'favicon-dev/safari-pinned-tab.svg' %>" color="#5bbad5">
  <link rel="shortcut icon" href="<%= asset_path 'favicon-dev/favicon.ico' %>">
  <meta name="msapplication-config" content="<%= asset_path 'favicon-dev/browserconfig.xml' %>">
  <meta name="theme-color" content="#ffffff">
<% else %>
  <link rel="apple-touch-icon" sizes="180x180" href="<%= asset_path 'favicon/apple-touch-icon.png' %>">
  <link rel="icon" type="image/png" href="<%= asset_path 'favicon/favicon-32x32.png' %>" sizes="32x32">
  <link rel="icon" type="image/png" href="<%= asset_path 'favicon/favicon-16x16.png' %>" sizes="16x16">
  <link rel="manifest" href="<%= asset_path 'favicon/manifest.json' %>">
  <link rel="mask-icon" href="<%= asset_path 'favicon/safari-pinned-tab.svg' %>" color="#5bbad5">
  <link rel="shortcut icon" href="<%= asset_path 'favicon/favicon.ico' %>">
  <meta name="msapplication-config" content="<%= asset_path 'favicon/browserconfig.xml' %>">
  <meta name="theme-color" content="#ffffff">
<% end %>
