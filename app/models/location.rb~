class Location < ActiveRecord::Base
  belongs_to :user

  geocoded_by :fulladdress   # can also be an IP address
  after_validation :geocode  # auto-fetch coordinates
  
  def fulladdress
    String(street_and_no) + ", " + String(postcode) + " " + String(city) + ", " + String(country)
  end

  def shortaddress
    String(street_and_no) + ", " + String(city)
  end

end
